@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    var dataTable = ViewBag.dt as System.Data.DataTable;
    int count = 1;
}
<style>
    
    .search-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 20px 0;
        padding: 10px;
        width: 100%;
    }

    #searchInput {
        width: 60%;
        padding: 10px 15px;
        font-size: 16px;
        border-radius: 25px;
        border: 1px solid #ccc;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        outline: none;
        transition: all 0.3s ease-in-out;
    }

        #searchInput:focus {
            border-color: #4CAF50; 
            box-shadow: 0 0 8px rgba(76, 175, 80, 0.5);
        }

    table {
        font-size: 20px !important;
        overflow: scroll !important;
    }

    .custom-table th {
        border: 1.4px solid black;
        color: black;
        width: 198px;
    }

    .custom-table td {
        border: 1.4px solid black;
    }
</style>


<div class="row">
    <div style="margin-left: 17px;margin-top: 16px;">
        <div class="card-body">
        <button onclick="generateExcel()" class="btn btn-primary">Download Excel</button>
        </div>
    </div>
</div>








<div class="container-fluid" id="bdy">
    <div class="card shadow mt-4">
        <div class="row py-3 px-3">

       

            <!-- Modal -->
            <div class="modal fade" id="myModal"  tabindex="-1" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">

                        <div class="modal-header">
                            <h5 class="modal-title" id="myModalLabel">Material Details</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>

                        <div class="modal-body" style="overflow-x: scroll;">
                            <table id="mytable" class="display table table-bordered" style=" overflow:scroll">

                            </table>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                     
                        </div>

                    </div>
                </div>
            </div>



            <div class="search-container">
                <input type="text" id="searchInput" placeholder="Search for Material" />
                
            </div>
            <div class="card-body">
                <div class="table-container">
                    <!-- Adding a line above the table -->
                    <div class="table-responsive">
                        <table class="table table-striped custom-table" style="border: 2px solid black;overflow:scroll; border-collapse: collapse;" id="tableid">
                            <thead>
                                <tr>
                                    <th>S.No</th>
                                    <th>Material Name</th>
                                    <th>Available stock</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (dataTable != null)
                                {
                                    @foreach (System.Data.DataRow row in dataTable.Rows)
                                    {
                                        <tr>
                                            <td>@count</td>
                                            <td  onclick="GetDetails('@row["EquipmentList"]')"><span style="text-decoration:underline; cursor:pointer;">@row["EquipmentList"]</span></td>
                                            <td>@row["Quantity"]</td>
                                        </tr>
                                        count++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.17.0/xlsx.full.min.js"></script>
<!-- Bootstrap 5 CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Bootstrap 5 JS + Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script type="text/javascript" charset="utf8" src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script>
    function generateExcel() {
        // Get the table element by ID
        var table = document.getElementById("tableid");

        // Use SheetJS to convert the table into an Excel worksheet
        var ws = XLSX.utils.table_to_sheet(table);

        // Create a new workbook
        var wb = XLSX.utils.book_new();

        // Append the worksheet to the workbook
        XLSX.utils.book_append_sheet(wb, ws, "Stock Report");

        // Generate and trigger the download of the Excel file
        XLSX.writeFile(wb, "StockReport.xlsx");
    }





    $('#searchInput').on('keyup', function () {
    let filter = $(this).val().toUpperCase();


        $('#tableid tbody tr').each(function (index) {
        if (index === -1) return; 

        let row = $(this);
        let match = false;

        // Check each cell in the row
        row.find('td').each(function () {
            if ($(this).text().toUpperCase().indexOf(filter) > -1) {
                match = true;
                return false;
            }
            else {
                row.add('not Found')
            }
        });

        
        row.toggle(match);
    });
});

    function getURL() {
        const hostname = window.location.hostname;
        if (hostname == "localhost") {
            return '';
        }
        else {
            return '/Inventory';
        }

    };

    var myurl = getURL();
    function GetDetails(name){
      
        $('#myModal').modal('toggle')
        $.ajax({
            url: myurl + '/Home/GetDetailsItems',
            type: "post",
            data: { materialName: name },
            success: function (data) {

             
                var data = JSON.parse(data);
                console.log(data)
                if (data.length != 0) {



                    CreateTableFromArray(data, "mytable")


                }
                else {
                    $("#mytable").html(`<tr><td colspan=""><h4  class="text-center text-danger">Not Available !!<h4></td></tr>`);
                }

            },
            error: (err) => {
                $("#loader").addClass("d-none")
                alert(err)
            }
        })
    
    }


</script>