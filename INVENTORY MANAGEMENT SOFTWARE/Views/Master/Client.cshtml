<div class=" container-fluid" id="bdy">
    <div class="card shadow ">

        <div class="card-header py-3">
            <h5 id="header" class="m-0 font-weight-bold text-primary ">Client Master</h5>
        </div>
        <div class="card-body">
            <div class="row d-none" id="DivHead">
                <input type="hidden" value="0" id="Hid_Id" />
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="Cliet Name">Client Name</label>
                        <input type="text" name="Client Name" id="Cliet" class="form-control mandatory" value="" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="centerpoint">Br Code</label>
                        <input type="text" name="Br Code" id="BrCode" class="form-control mandatory" value="" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="Branch Name">Branch Name</label>
                        <input type="text" name="Branch Name" id="BranchName" class="form-control mandatory" value="" />
                    </div>
                </div>
                <!-- Date Selection -->
                <div class="col-md-6">
                    <div class="form-group ">
                        <label for="Branch Address">Branch Address</label>
                        <input type="text" name="Branch Address" id="BranchAddress" class="form-control mandatory" value="" />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group ">
                        <label for="State">State</label>
                        <input type="text" name="State Name" id="State" class="form-control mandatory" value="" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group ">
                        <label for="District">District</label>
                        <input type="text" name="District Name" id="District" class="form-control mandatory" value="" />
                    </div>
                </div>
                <div>
                    <button id="btnsave" type="button" onclick="SaveData()" class="btn btn-dark  mt-3">Submit</button>
                    <button onclick="ShowList()" class="btn btn-dark  mt-3">View List</button>
                </div>
            </div>


            @*     <input type="text" id="searchInput" placeholder="Search Here ..."/> *@

            <div id="footdiv">
                <div class="mb-2" style="padding:0 0 3rem 0">
                    <button class="btn btn-dark" style="float:right" onclick="Show()">Add New</button>
                </div>
                <input id="searchInput" class="form-control" style="width:25%;" placeholder="Search Br Code or Client  .." />
                <div class="table-responsive mt-2" id="printdiv">
                </div>



            </div>
        </div>
    </div>
    </div>

    <style >
    #searchInput::placeholder {
        color: #888;
        font-style: italic;
        font-size: 14px;
    }
    </style>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="~/js/Master/Client.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.1/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.1/js/select2.min.js"></script>
    <script type="text/javascript">



    $('#searchInput').on('keyup', function () {
        let filter = $(this).val().toUpperCase();

        $('#data-table tbody tr').each(function () {
            let row = $(this);
            let match = false;

          
            let columnsToSearch = [2,3];

            columnsToSearch.forEach(function (colIndex) {
                let cellText = row.find('td:eq(' + colIndex + ')').text().toUpperCase();
                if (cellText.indexOf(filter) > -1) {
                    match = true;
                }
            });

            row.toggle(match);
        });
    });


        
    </script>



