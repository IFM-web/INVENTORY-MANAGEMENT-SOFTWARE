<script type="text/javascript">
    $('#searchInput').on('keyup', function () {
        let filter = $(this).val().toUpperCase();
        let table = $('#data-table');
        let rows = table.find('tbody tr');

        rows.each(function () {
            let row = $(this);
            // Check if this is a header row (th inside tr)
            let isHeaderRow = row.find('th').length > 0;

            // If it's a header row, hide when filter is active
            if (isHeaderRow) {
                if (filter.trim() !== "") {
                    //row.hide();
                } else {
                    row.show();
                }
                return; // Skip to next row
            }

            // Normal data row filter
            let match = false;
            row.find('td').each(function () {
                if ($(this).text().toUpperCase().indexOf(filter) > -1) {
                    match = true;
                    return false;
                }
            });

            row.toggle(match);
        });
    });


</script>







